<Window x:Class="FTPUpdater.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FTPUpdater"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        Title="UpdateWindow" Height="223.395" Width="221.984">
    <Grid>
        <ComboBox x:Name="VersionBox" Text="Version" HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" Margin="0,44,0,0" SelectionChanged = "OnSelectionChanged"/>
        <Label Content="Select version number" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,14,0,0"/>
        <TextBlock x:Name="UpdateDetails" HorizontalAlignment="Center" Height="57" VerticalAlignment="Top" TextWrapping="WrapWithOverflow" Width="194" Margin="0,76,0,0" />
        <Button x:Name="UpdateButton" Content="Update" HorizontalAlignment="Center" VerticalAlignment="Top" Width="74" IsEnabled = "False" Margin="0,160,0,0" Click="UpdateButtonClick"/>
        <ProgressBar x:Name="ProgressBar" HorizontalAlignment="Center" VerticalAlignment="Top" Visibility="Hidden" Height="18" Width="126" Margin="0,135,0,0"/>
        <Label x:Name="BytesLabel" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,131,0,0"/>
    </Grid>
</Window>
